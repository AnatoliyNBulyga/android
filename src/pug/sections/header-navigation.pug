nav.top-nav

	.container-fluid
		.row.align-items-center
			.col-md-auto
				a(href="index.html" class="top-nav__logo")
					img.top-nav__logo-img(src="../../img/logo/logoSmall.png" srcset="../../img/logo/logoSmall@2x.png 2x" alt="Logo")
					span.top-nav__logo-description 共享器

			.col-md
				ul.top-nav__menu
					li.top-nav__menu-list
						a(href="#") Articles
					li.top-nav__menu-list
						a(href="#") Manual
					li.top-nav__menu-list
						a(href="#") Contacts

			.col-md-auto
				.subscribe-block.justify-content-flex-end
					.subscribe-block__cta
						.subscribe-block__cta-slogan Start your free trial today
						.subscribe-block__cta-descr 7-day Trial • Easy to use • Cancel anytime
					.sign-in
						form
